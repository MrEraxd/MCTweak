{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "@svg/*": ["assets/svg/*"],
      "@base/*": ["components/Base/*"],
      "@stores/*": ["stores/*"],
      "@graphql/*": ["graphql/*"],
      "@plugins/*": ["plugins/*"],
      "@types": ["types.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.gql"
  ]
}
